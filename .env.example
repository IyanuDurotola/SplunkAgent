# Gateway Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Splunk Configuration
SPLUNK_HOST=your-splunk-host
SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=your-password
SPLUNK_SCHEME=https
SPLUNK_VERIFY=false
SPLUNK_HEC_TOKEN=your-hec-token-optional
SPLUNK_HEC_PORT=8088

# Query Generator Configuration
QUERY_GEN_LLM_PROVIDER=openai
QUERY_GEN_LLM_MODEL=gpt-4
QUERY_GEN_LLM_TEMPERATURE=0.3
QUERY_GEN_ENABLE_GUARDRAILS=true

# Memory Configuration
MEMORY_TOP_K_RESULTS=5

# Answer Generator Configuration
ANSWER_GEN_LLM_PROVIDER=openai
ANSWER_GEN_LLM_MODEL=gpt-4
ANSWER_GEN_LLM_TEMPERATURE=0.7

# OpenAI API Key (fallback if not set in service-specific configs)

# Memory Configuration (PostgreSQL with pgvector)
MEMORY_DB_HOST=localhost
MEMORY_DB_PORT=5432
MEMORY_DB_NAME=splunkprocessor
MEMORY_DB_USER=postgres
MEMORY_DB_PASSWORD=postgres
MEMORY_DB_POOL_SIZE=10
MEMORY_DB_MAX_OVERFLOW=20
MEMORY_TABLE_NAME=incidents
MEMORY_TOP_K_RESULTS=5


# AWS Bedrock Configuration (Shared across all services)
# These credentials are used by all AI services: Query Generator, Answer Generator, Planning Engine, and Embeddings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Service-specific model configurations (optional overrides)
# Query Generator Configuration (Bedrock)
QUERY_GEN_LLM_MODEL=claude-3-sonnet
QUERY_GEN_AWS_REGION=us-east-1  # Optional: override shared AWS_REGION
QUERY_GEN_LLM_TEMPERATURE=0.3

# Answer Generator Configuration (Bedrock)
ANSWER_GEN_LLM_MODEL=claude-3-sonnet
ANSWER_GEN_AWS_REGION=us-east-1  # Optional: override shared AWS_REGION
ANSWER_GEN_LLM_TEMPERATURE=0.7

# Planning Engine Configuration (Bedrock)
PLANNING_MODEL=claude-3-sonnet

# Memory Embedding Configuration (Bedrock Titan)
MEMORY_EMBEDDING_MODEL=titan-embed-v1
MEMORY_EMBEDDING_DIMENSION=1536
MEMORY_AWS_REGION=us-east-1  # Optional: override shared AWS_REGION
